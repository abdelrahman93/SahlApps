<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Wheat</item>
        <item name="colorPrimaryDark">#a26b5353</item>
        <item name="colorAccent">#1a000000</item>
    </style>


    <style name="Button_Style">
        <item name="android:background">@drawable/button_click</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>

    </style>
    <style name="AppTheme.NavigationView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">"Roboto-Black italic"</item>
<item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
